mkdir -p "Work"
mkdir -p "Work/Лабораторная работа 1"
mkdir -p "Work/ЖаберИльяАнварович"
chmod 774 "Work/Лабораторная работа 1"
chmod 200 "Work/ЖаберИльяАнварович"
touch "Work/Text @1" "Work/Text \$2" "Work/Text #3"
echo "Птица говорун отличается умом и сообразительностью!" > "Work/Text @1"
echo "Отличается умом, отличается сообразительностью..." >> "Work/Text @1"
cat "Work/Text @1" > "Work/Text \$2"
mv "Work/Text \$2" "Work/Лабораторная работа 1/"
chmod 700 "Work/ЖаберИльяАнварович"
cp "Work/Text @1" "Work/ЖаберИльяАнварович/"
chmod 200 "Work/ЖаберИльяАнварович"
gzip "Work/Text @1"
gzip "Work/Text #3"
tar -czf MyAchiv.tar.gz "Work/Text @1.gz" "Work/Text #3.gz"
gunzip "Work/Text #3.gz"
gunzip "Work/Text @1.gz"
head -n 1 "Work/Text @1" > "Work/Text #3"
echo "Будь осторожен! Преступник вооружен!" >> "Work/Text #3"
chmod 700 "Work/ЖаберИльяАнварович"
tac "Work/Text @1" > "Work/ЖаберИльяАнварович/Result_one"
chmod 200 "Work/ЖаберИльяАнварович"
chmod 700 "Work/ЖаберИльяАнварович"
mv "Work/ЖаберИльяАнварович/Result_one" "Work/ЖаберИльяАнв
арович/Result_two"
chmod 200 "Work/ЖаберИльяАнварович"
chmod 700 "Work/ЖаберИльяАнварович"
ls -la "Work/ЖаберИльяАнварович/" | grep -E '^[^d].*T' > "
Work/Лабораторная работа 1/Result_3"
chmod 200 "Work/ЖаберИльяАнварович"
uname -a >> "Work/Лабораторная работа 1/Result_3"
date >> "Work/Лабораторная работа 1/Result_3"
mkdir Lab_1
mv sandbox Work Work_files Lab_1/
git add .
git commit -m "Завершение лабораторной работы: работа с файлами"
